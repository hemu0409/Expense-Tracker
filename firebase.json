{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "FIREBASE_SETUP.md",
      "QUICKSTART.md",
      "START_HERE.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/auth.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  }
}
